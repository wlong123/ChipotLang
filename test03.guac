<< ten threads increment and decrement a shared variable WITHOUT locks so output is nondeterministic >>
def x = ref 0 in
def inc_x = fun y =>
  x := !x + 1;
  x := !x - 1;
  x := !x + 1;
  x := !x - 1;
  x := !x + 1
in
def loop = fun n =>
  if (n = 0) then none
  else thread (inc_x (none)); loop (n - 1)
in
loop (10);
joinall;
print (!x)