<< ten threads increment and decrement a shared variable WITH locks (related to test03.guac) >>
def x = ref 0 in
def inc_x = fun y =>
  lock x;
  x := !x + 1;
  x := !x - 1;
  x := !x + 1;
  x := !x - 1;
  x := !x + 1;
  unlock x
in
def loop = fun n =>
  if (n = 0) then none
  else thread (inc_x (none)); loop (n - 1)
in
loop (10);
joinall;
